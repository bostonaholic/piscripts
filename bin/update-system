#!/bin/bash

set -euo pipefail

echo "==> sudo apt-get update --fix-missing --yes" \
  && sudo apt-get update --fix-missing --yes \
  && echo \
  && echo "==> sudo apt-get dist-upgrade --no-install-recommends --verbose-versions --yes" \
  && sudo apt-get dist-upgrade --no-install-recommends --verbose-versions --yes \
  && echo \
  && echo "==> sudo apt-get autoremove --yes" \
  && sudo apt-get autoremove --yes \
  && echo \
  && echo "==> sudo apt-get clean" \
  && sudo apt-get clean \
  && echo \
  && echo "==> sudo rm --recursive --dir --force --verbose /var/lib/apt/lists/* /tmp/* /var/tmp/*" \
  && sudo rm --recursive --dir --force --verbose /var/lib/apt/lists/* /tmp/* /var/tmp/*

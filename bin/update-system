#!/bin/bash

# -e or errexit causes the script to exit immediately if any command returns a non-zero exit status.
# -u or nounset causes the script to exit if it encounters any unset variables.
# -o pipefail sets the exit status of a pipeline to the rightmost command that returns a non-zero exit status, or zero if all commands in the pipeline succeed.
set -euo pipefail

cd "$(dirname "$0")"

source ./print-and-run

echo "==> start update-system at $(date)"

print_and_run sudo apt-get update --fix-missing --yes
print_and_run sudo apt-get dist-upgrade --no-install-recommends --verbose-versions --yes
print_and_run sudo apt-get autoremove --yes
print_and_run sudo apt-get clean
print_and_run sudo rm --recursive --dir --force --verbose /var/lib/apt/lists/* /tmp/* /var/tmp/*

echo "==> end update-system at $(date)"

if [ -f /var/run/reboot-required ]; then
    echo "Reboot is required. Proceeding with system reboot."
    sudo reboot
fi
